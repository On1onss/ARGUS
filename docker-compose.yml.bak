version: '1.0'

services:
  server:
    build:
      context: ./server
    volumes:
      - ./server:/app
    ports:
      - "8000:8000"
    env_file: ".env"
  frontend:
    build:
      context: ./frontend
    volumes:
      - ./frontend:/app
    ports:
      - "5173:5173"
  depends_on:
      - server
